<p id="notice"><%= notice %></p>

<div class="panel panel-success">
  <div class="panel-heading"><h4>Artists </h4><%= link_to 'New Artist', new_admin_artist_path %>
</div>
  <div class="panel-body">

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Placeofbirth</th>
      <th>State</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.dob %></td>
        <td><%= artist.placeOfBirth %></td>
        <td><%= artist.state %></td>
        <td><%= artist.address %></td>
        <% if artist.user_id == current_user.id %>
        <td><%= link_to 'Show', admin_artist_path(artist) %></td>
        <td><%= link_to 'Edit', edit_admin_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', admin_artist_path(artist), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
