<p id="notice"><%= notice %></p>

<div class="panel panel-success">
  <div class="panel-heading"><h4>Albums </h4><%= link_to 'New Album', new_admin_album_path %></div>
  <div class="panel-body">
    <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.year %></td>
        <td><%= album.artist.name %></td>
        <td><%= link_to 'Show', admin_album_path(album) %></td>
        <td><%= link_to 'Edit', edit_admin_album_path(album) %></td>
        <td><%= link_to 'Destroy', admin_album_path(album), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>


