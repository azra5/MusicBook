<p id="notice"><%= notice %></p>

<div class="panel panel-success">
  <div class="panel-heading"><h4>Songs </h4><%= link_to 'New Song', new_admin_song_path %>
</div>
  <div class="panel-body">

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Album</th>
      <th>Genre</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.artist.name %></td>
        <td><%= song.album.name %></td>
        <td><%= song.genre.name %></td>
        <td><%= song.duration %></td>
        <td><%= link_to 'Show', admin_song_path(song) %></td>
        <td><%= link_to 'Edit', edit_admin_song_path(song) %></td>
        <td><%= link_to 'Destroy', admin_song_path(song), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

