<p id="notice"><%= notice %></p>

<div class="panel panel-success">
  <div class="panel-heading"><h4>Songs </h4>
</div>
  <div class="panel-body">

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Album</th>
      <th>Genre</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.song.name %></td>        
        <td><%= song.song.artist.name %></td>
        <td><%= song.song.album.name %></td>
        <td><%= song.song.genre.name %></td>
        <td><%= song.song.duration %></td>
        <td>
        <%= link_to "Remove", {:controller => "playlist_songs", :action => 'destroy', :id => song.id}, :confirm => "Are you sure you want to remove this song from playlist?", :method => :delete %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

