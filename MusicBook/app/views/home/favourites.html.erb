<p id="notice"><%= notice %></p>

<div class="panel panel-success">
  <div class="panel-heading"><h1>Favourite songs </h1>
</div>
  <div class="panel-body">

<table class="table">
  <thead>
    <tr>
      <th>Artist</th>
      <th>Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favourites.each do |favourite| %>
      <tr>
        <td><%= favourite.song.artist.name %></td>
        <td><%= favourite.song.name %></td>
        <td><%= link_to 'Remove', favourite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>