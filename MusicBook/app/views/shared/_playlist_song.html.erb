<div id="content">
<%= form_for @playlist_song = PlaylistSong.new, method: :post do |form| %>

<div class="modal-header">
   <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
   <h3 id="myModalLabel">Adding song to playlist</h3>
 </div>
 <div class="modal-body">
  <div class="field" hidden="truue">
    <%= form.text_field :song_id, id: :song_id %>
  </div>

  <div class="field">
    <%= form.label 'Playlist' %>
