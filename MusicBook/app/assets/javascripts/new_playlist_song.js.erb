function saveSongPlaylist(){
	var song_id = $('#song_id').val();
	var playlist_id = $('#playlist_song_playlist_id').val();

$.ajax({
        url:'/playlist_songs',
        type:'POST',
        dataType:'json',
        async: true,
        data:{
        	playlist_song:{
            song_id: song_id,
            playlist_id: playlist_id
        }
        },
        success:function(data){
            alert(data.responseText);
        },
        error:function(data){
            console.log(data.responseText);
        }
    });	
            
    $('#modal-window').modal('toggle');

}

